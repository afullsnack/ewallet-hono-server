{
  "name": "ewallet-server-hono",
  "scripts": {
    "dev": "pnpm with-env tsx watch src/index.ts | pino-pretty --colorize -l",
    "build": "tsup src/index.ts --format cjs,esm",
    "start": "pnpm with-env node dist/index.js",
    "db:push": "pnpm with-env npx drizzle-kit push",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:studio": "npx drizzle-kit studio --verbose",
    "test": "pnpm with-env vitest run",
    "with-env": "dotenv -e .env --"
  },
  "type": "module",
  "dependencies": {
    "@better-auth/expo": "^1.2.2",
    "@biconomy/abstractjs": "0.1.0",
    "@biconomy/sdk": "^0.0.11",
    "@effect/platform": "^0.64.0",
    "@effect/schema": "0.75.5",
    "@hono/effect-validator": "1.1.0",
    "@hono/node-server": "^1.13.1",
    "@libsql/client": "^0.14.0",
    "@rhinestone/module-sdk": "0.2.3",
    "better-auth": "^1.2.2",
    "bip32": "5.0.0-rc.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "bitcore-lib": "^10.8.0",
    "data-urls": "^5.0.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^8.0.0",
    "drizzle-orm": "^0.39.3",
    "ecpair": "3.0.0-rc.0",
    "effect": "^3.9.2",
    "hono": "^4.6.3",
    "ioredis": "^5.5.0",
    "jimp": "^1.6.0",
    "jsqr-es6": "1.4.0-1",
    "pg": "^8.13.3",
    "pino": "^9.5.0",
    "qrcode": "^1.5.4",
    "qrcode-parser": "^2.1.3",
    "shamirs-secret-sharing-ts": "^1.0.2",
    "tiny-secp256k1": "^2.2.3",
    "uuid": "^11.0.3",
    "viem": "^2.23.5",
    "whatwg-encoding": "^3.1.1"
  },
  "devDependencies": {
    "@types/bitcore-lib": "^0.15.6",
    "@types/data-urls": "^3.0.4",
    "@types/pg": "^8.11.11",
    "@types/qrcode": "^1.5.5",
    "@types/whatwg-encoding": "^2.0.3",
    "drizzle-kit": "^0.30.4",
    "pino-pretty": "^13.0.0",
    "tsup": "^8.4.0",
    "tsx": "^4.7.1",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=20.*"
  }
}